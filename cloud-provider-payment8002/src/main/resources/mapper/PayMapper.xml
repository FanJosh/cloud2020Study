<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.springcloud.mapper.PayMapper">
    <resultMap id="pay" type="com.study.springcloud.entities.Payment">
        <id column="id" property="id"/>
        <result column="serial" property="serial"/>
    </resultMap>

    <select id="getPayment" resultMap="pay">
        select * from payment where id = #{id}
    </select>

    <insert id="createPay" useGeneratedKeys="true" keyProperty="id">
        insert into payment(serial)values ( #{serial});
    </insert>
</mapper>